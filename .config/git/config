[advice]
	addIgnoredFile = false

[commit]
	gpgsign = true

[core]
	autocrlf = input
	editor = nvim
	pager = delta

[delta]
	light = false
	line-numbers = true
	navigate = true
	syntax-theme = Dracula

[diff]
	colorMoved = default

[fetch]
	prune = true

[include]
	path = config.local

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[url "github:"]
	insteadOf = "https://github.com/"
	insteadOf = "git@github.com:"
